<!DOCTYPE html>
<html lang="en">

<head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous">
        <link rel="stylesheet" href="/static/styles/style.css">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Search for colleges using Apollo and guide your future">
        <meta name="author" content="Kerdon Chapman, Farhan Chowdury, Noel Singh">
        <link rel="shortcut icon" href="../static/logo/apollo_logo.png" type="image/x-icon">
        <link rel="stylesheet" href="../static/styles/settings.css">
        <title>Browse Colleges on Apollo</title>
</head>

<body>

        {# Navbar and flashes #}
        {% include "components/navbar.html.jinja" %}
        {% include "components/flashes.html.jinja" %}
        {# {{length}} #}

        <main class="container row g-4 mx-auto">

                {# Page title #}
                <div class="my-5">
                        <h1 class="display-5 fw-bold text-body-emphasis custom-txt text-center">Browse</h1>
                        <p class="lead mb-4 text-center">Search, Add, and Remove Colleges </p>
                </div>

                {# Search Container #}
                <div class="container col-8 justify-content-center">
                        <form class="d-flex flex-row col-12 mx-auto " action="/browse/search" method="post">

                                {# Search Bar #}
                                {%if query==None%}

                                <input class="form-control" name="query" class="form-control me-2" type="text"
                                        placeholder="Search" aria-label="Search">

                                {%else%}

                                <input value="{{query}}" name="query" class="form-control me-2" type="text"
                                        placeholder="Search" aria-label="Search">

                                {%endif%}

                                {# Submit Button #}
                                <button class="btn btn-outline-warning custom-button ms-2"
                                        type="submit">Search!</button>
                                {# Clear Query Button #}
                                <button class="btn btn-outline-secondary ms-2" type="reset">Clear
                                        Query</button>

                        </form>
                </div>

                <div class="container mt-5">

                        {% include "components/pagination.html.jinja" %}

                        {# Colleges #}
                        <div class="container row my-5">

                                {%for college in colleges%}

                                <div class="col-3 my-3" style="height: 200px;">
                                        <div class="card h-100">
                                                <div class="card-body">

                                                        <div class="">
                                                                <h5 class="card-title">
                                                                        {{college['name']}}</h5>
                                                                <p class="card-text text-secondary">
                                                                        {{college['city']}}
                                                                        , {{college['state']}}
                                                                </p>
                                                        </div>
                                                </div>
                                                <div class="card-footer">
                                                        <div class="d-flex align-items-end">

                                                                <a href="/college/{{college['id']}}"
                                                                        class="btn btn-outline-warning custom-button">View
                                                                        College</a>

                                                        </div>
                                                </div>
                                        </div>
                                </div>
                                {%endfor%}
                        </div>
                </div>


                {% include "components/pagination.html.jinja" %}


        </main>
        <script src="/docs/5.3/assets/js/color-modes.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
                integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
                integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
                crossorigin="anonymous"></script>
        <script src="/static/scripts/script.js"></script>

</body>

</html>