<body>

    {% include "components/navbar.html.jinja" %}

    <div class="container row mx-auto">

        <div class="col-12 my-5">
            <div class="row">

                <div class="">

                    <div class="text-center">
                        <h5 class="h1 custom-txt">{{college['name']}}</h5>
                        <p class="text-secondary fs-5">{{college['city']}}, {{college['state']}}</p>
                    </div>

                    <div class="text-center mx-5 my-5">
                        <h2 class="h3">Tuition: {{college['tuition']}}</h2>
                    </div>

                    <div class="text-center mx-5 my-5">
                        <h2 class="h3">Admission Rate: {{college['admission_rate']}}</h2>
                    </div>

                    <div class="text-center mx-5 my-5">
                        <h2 class="h3">Students Enrolled: {{college['size']}}</h2>
                    </div>

                    {%if added==False%}
                    <form class="d-flex flex-column justify-content-center align-items-center mb-5" method="post" action="/college/{{college['id']}}/add">
                        <button type="submit" class="btn btn-outline-warning w-50 py-2">Add to List</button>
                    </form>
                    {%elif added==True%}
                    <form class="d-flex flex-column justify-content-center align-items-center mb-5" method="post" action="/college/{{college['id']}}/remove">
                        <button type="submit" class="btn btn-outline-warning w-50 py-2">Remove from List</button>
                    </form>
                    {%endif%}

                    <a href="/analytics" class="btn btn-outline-warning w-50 py-2 d-block mx-auto">View your List</a>
                </div>

            </div>


        </div>
    </div>
